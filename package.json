{
  "name": "bhamgraph",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "scripts": {
    "prestart": "copyfiles -f ./src/schema.graphql ./dist",
    "build": "tsc --build ./tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon --ext ts --exec 'yarn build --incremental && yarn start'",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/typescript": "1.21.0",
    "apollo-datasource-mongodb": "^0.3.0",
    "apollo-datasource-rest": "^0.10.0",
    "apollo-server": "^2.21.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-import-node": "^0.0.4",
    "mongodb": "^3.6.4",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.2"
  }
}
